<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Translink.RoutePage">
  <StackLayout VerticalOptions="Start">
    <Button
      x:Name="RefreshButton"
      HorizontalOptions="Fill"
      Clicked="OnRefreshNearestStops"
      Text="Refresh"/>
    <ListView x:Name="RouteList" HorizontalOptions="Fill" >
      <ListView.ItemTemplate>
        <DataTemplate>
          <TextCell Text="{Binding Number}" Detail="{Binding StopsAsString}" />
        </DataTemplate>
      </ListView.ItemTemplate>
    </ListView>
  </StackLayout>
</ContentPage>