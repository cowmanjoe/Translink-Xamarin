<?xml version="1.0" encoding="utf-8" ?>
<pages:BasePage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Translink.Pages.FavouriteStopsPage"
             xmlns:pages="clr-namespace:Translink.Pages;assembly=Translink.Pages">
  <StackLayout>
    <Button Text="Clear Favourite Stops" Command="{Binding ClearFavouriteStops}"/>
    <ListView ItemsSource="{Binding StopList}" SelectedItem="{Binding SelectedStopInfo}">
      <ListView.ItemTemplate>
        <DataTemplate>
          <TextCell Text="{Binding Name}" Detail="{Binding Number}"/>
        </DataTemplate>
      </ListView.ItemTemplate>
    </ListView>
  </StackLayout>
</pages:BasePage>