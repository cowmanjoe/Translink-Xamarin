<?xml version="1.0" encoding="utf-8" ?>
<d:BasePage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Translink.Pages.FavouriteStopsPage"
             xmlns:d="clr-namespace:Translink.Pages;assembly=Translink.Pages">
  <StackLayout>
    <ListView ItemsSource="{Binding StopList}">
      <ListView.ItemTemplate>
        <DataTemplate>
          <TextCell Text="{Binding Name}" Detail="{Binding Number}"/>
        </DataTemplate>
      </ListView.ItemTemplate>
    </ListView>
  </StackLayout>
</d:BasePage>