<?xml version="1.0" encoding="utf-8" ?>
<pages:BasePage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Translink.Pages.FavouriteRoutesPage"
             xmlns:pages="clr-namespace:Translink.Pages;assembly=Translink.Pages">
  <StackLayout>
    <Button Text="Clear Favourite Routes" Command="{Binding ClearFavouriteRoutes}"/>
    <ListView ItemsSource="{Binding RouteList}" SelectedItem="{Binding SelectedRouteDirection}">
      <ListView.ItemTemplate>
        <DataTemplate>
          <TextCell Text="{Binding RouteNumber}" Detail="{Binding Direction}"/>
        </DataTemplate>
      </ListView.ItemTemplate>
    </ListView>
  </StackLayout>
</pages:BasePage>