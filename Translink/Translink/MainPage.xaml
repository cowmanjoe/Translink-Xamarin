<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Translink.MainPage">
  <StackLayout VerticalOptions="Start">
    <Label Text="Stop Number:" HorizontalOptions="Start" />
    <Entry x:Name="StopEntry" Text="60980" HorizontalTextAlignment="Start" Keyboard="Numeric" />
    <Label Text="Route Number:" HorizontalOptions="Start"/>
    <StackLayout Orientation="Horizontal">
      <Switch x:Name="RouteSwitch" IsToggled="false" Toggled="OnToggleRouteSwitch" HorizontalOptions="Start"/>
      <Entry x:Name="RouteEntry" Text="4" HorizontalOptions="FillAndExpand" Keyboard="Numeric" IsVisible="false" />
    </StackLayout>

    <StackLayout Spacing="10" Orientation="Horizontal">
      <Button
        x:Name="AddButton"
        HorizontalOptions="FillAndExpand"
        Text="Add"
        Clicked="OnAddDeparturesRequested"/>
      <Button
        x:Name="ClearButton"
        HorizontalOptions="FillAndExpand"
        Text="Clear"
        Clicked="OnClearDepartures"/>
    </StackLayout>

    <ListView x:Name="DepartureListView" HorizontalOptions="Fill">
      <ListView.ItemTemplate>
        <DataTemplate>
          <TextCell Text="{Binding AsString}" />
        </DataTemplate>
      </ListView.ItemTemplate>
    </ListView>
  </StackLayout>

</ContentPage>